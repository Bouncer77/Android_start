<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/gibraltar"
        android:layout_width="203dp"
        android:layout_height="128dp"
        android:layout_marginTop="116dp"
        android:onClick="showDescriptionGibraltar"
        android:text="Gibraltar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bloodhound"
        android:layout_width="203dp"
        android:layout_height="128dp"
        android:layout_marginTop="116dp"
        android:onClick="showDescriptionBloodhound"
        android:text="Bloodhound"
        app:layout_constraintEnd_toStartOf="@+id/gibraltar"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinerOpportunities"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:entries="@array/opportunities"
        app:layout_constraintBottom_toTopOf="@+id/gibraltar"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textViewDescriptionTemp"
        android:layout_width="410dp"
        android:layout_height="384dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bloodhound"
        tools:layout_editor_absoluteX="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>